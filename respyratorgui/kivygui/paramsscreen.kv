#:kivy 1.11.1

<ParamsScreen>:
    name: 'params_screen'
    id: params_screen
    params: params_layout

    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: 1
            text: txts['params_params'].upper()

        AnchorLayout:
            id: params_layout
            anchor_x: 'center'
            anchor_y: 'center'
            padding: 20
            
            Param:
                param: 'Parrametro'
                acronym: 'PRM'
                units: 'L'
                value_min: 1.0
                value_max: 3.0
                value: 2.0
                text_value: 'pene'
