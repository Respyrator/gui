#:kivy 1.11.1

<ParamsScreen>:
    name: 'params_screen'
    id: params_screen
    params_layout: params_layout

    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: 1
            text: txts['params_params'].upper()

        GridLayout:
            id: params_layout 
            size_hint_y: 9
            padding: 10
            spacing: 10
            cols: 3
            rows: 3


<Param@BoxLayout>:
    orientation: 'vertical'
    param_label: param_label
    param_value: param_value
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

    Label:
        id: param_label

    Slider:
        id: param_value
        on_value: root.updated_value()
