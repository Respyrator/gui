#                width: 40




<Param@BoxLayout>:
    orientation: 'vertical'
    acronym: param_label.text
    value: param_value.value
    value_min: param_value.min
    value_max: param_value.max
    text_value: param_label.text
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

    Label:
        id: param_label
        #text: str(param_value.value)

    Slider:
        id: param_value
