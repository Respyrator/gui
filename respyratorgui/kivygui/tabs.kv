#:kivy 1.11.1
#:import colors respyratorgui.kivygui.colors
#:import imgs respyratorgui.kivygui.imgs
#:import txts respyratorgui.kivygui.txts

<GuiTabs>:
    id: gui_tabs
    orientation: 'horizontal'

    Button:
        text: 'Cancel'.upper()
        on_press: root.tab_selected('cancel')

    Label:
        text : ''

    ToggleButton:
        group: 'tabs'
        state: gui_tabs.modes_state
        text: txts['modes_modes'].upper()
        on_press: root.tab_selected('modes', self)

    ToggleButton:
        group: 'tabs'
        state: gui_tabs.params_state
        text: txts['params_params'].upper()
        on_press: root.tab_selected('params', self)

    ToggleButton:
        group: 'tabs'
        state: gui_tabs.alarms_state
        text: txts['alarms_alarms'].upper()
        on_press: root.tab_selected('alarms', self)

    Label:
        text : ''

    Button:
        text: 'OK'.upper()
        on_press: root.tab_selected('monitoring')