#:kivy 1.11.1

<ModesScreen>:
    name: 'modes_screen'
    id: modes_screen
    BoxLayout:
        orientation: 'vertical'

        # Tittle & Controls ---------------------------------------------------
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 2

            BorderLabel:
                text: txts['modes_modes']

            BoxLayout:
                orientation: 'vertical'

                BorderLabel:
                    text: txts['modes_control']
                
                BoxLayout:
                    orientation: 'horizontal'

                    BorderLabel:
                        text: txts['modes_control_pressure']

                    BorderLabel:
                        text: txts['modes_control_volume']
        # Ventilations & mode buttons -----------------------------------------
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 4
            # Ventilations Tittle ---------------------------------------------
            Widget:
                size_hint_x: 1

                Scatter:
                    center: self.parent.center
                    size: ventilations.size
                    do_rotation: False
                    do_translation: False
                    do_scale: False
                    rotation: 90

                    BorderLabel:
                        id: ventilations
                        size: self.texture_size
                        text: txts['modes_ventilations']
            # Ventilations ----------------------------------------------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 4

                BorderLabel:
                    text: txts['modes_ventilation_control']

                BorderLabel:
                    text: txts['modes_ventilation_assist']

                BorderLabel:
                    text: txts['modes_ventilation_support']

                BorderLabel:
                    text: txts['modes_ventilation_spontaneous']
            # Control Buttons ---------------------------------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 5
                # Buttons except last row
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 3
                    # Buttons Control Preassure
                    BoxLayout:
                        orientation: 'vertical'

                        Button:
                            text: 'Control Presi칩n'
                            on_press: root.mode_selected('pressure_control')

                        Button:
                            text: 'Asistido Presi칩n'
                            on_press: root.mode_selected('pressure_assisted')

                        Button:
                            text: 'Soporte Presi칩n'
                            on_press: root.mode_selected('pressure_support')
                    # Buttons Control Volume
                    BoxLayout:
                        orientation: 'vertical'

                        Button:
                            text: 'Control Volumen'
                            on_press: root.mode_selected('volume_control')

                        Button:
                            text: 'Asistido Volumen'
                            on_press: root.mode_selected('volume_assisted')

                        BorderLabel:
                            text: ''
                # Buttons last row
                Button:
                    size_hint_y: 1
                    text: 'Espont치neo'
                    on_press: root.mode_selected('spontaneous')

<BorderLabel@Label>:
    halign: 'center'
    valign: 'center'
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height